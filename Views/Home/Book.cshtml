@model List<MassageManagementSystem.Models.Therapists>
@{
    ViewData["Title"] = "Book a Massage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book a Massage</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form asp-action="Book" method="post">
    <div class="form-group">
        <label for="therapistId">Select Therapist:</label>
        <select id="therapistId" name="therapistId" class="form-control">
            @foreach (var therapist in Model)
            {
                <option value="@therapist.Id">@therapist.Name - @therapist.Specialty</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="appointmentTime">Appointment Time:</label>
        <input type="datetime-local" id="appointmentTime" name="appointmentTime" class="form-control" required />
    </div>
    <!-- Promo Code Section -->
    <div class="form-group">
        <label for="promoCode">Promo Code:</label>
        <input type="text" id="promoCode" name="promoCode" class="form-control" placeholder="Enter promo code" />
        <button type="button" id="applyPromoBtn" class="btn btn-secondary mt-2">Apply Promo Code</button>
    </div>
    <div id="promoResult" class="mt-2"></div>
    <button type="submit" class="btn btn-success">Book Now</button>
</form>

@section Scripts {
    <script>
        document.getElementById("applyPromoBtn").addEventListener("click", function () {
            var promoCode = document.getElementById("promoCode").value;
            if (promoCode.trim() === "") {
                alert("Please enter a promo code.");
                return;
            }

            fetch("/api/promo/apply", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(promoCode)
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => { throw new Error(text) });
                }
                return response.json();
            })
            .then(data => {
                document.getElementById("promoResult").innerText = "Discount: " + data.discount;
            })
            .catch(error => {
                document.getElementById("promoResult").innerText = "Error: " + error.message;
            });
        });
    </script>
}
