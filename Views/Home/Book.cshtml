@model List<MassageManagementSystem.Models.Therapists>
@using Microsoft.AspNetCore.Identity
@inject UserManager<MassageManagementSystem.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Book a Massage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = UserManager.GetUserId(User);
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;1,400&family=Playfair+Display:ital,wght@1,600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Lora', serif;
        background-color: #fafafa;
        color: #2e2e2e;
        margin: 0;
        padding: 0;
    }

    header {
        background-color: #d7e6e9;
        padding: 20px;
        font-family: 'Playfair Display', serif;
        font-size: 2em;
        font-style: italic;
        text-align: center;
        position: relative;
    }

    .sign-in {
        font-size: 0.6em;
        font-style: italic;
        color: #444;
        text-decoration: none;
        position: absolute;
        top: 20px;
        right: 30px;
    }

        .sign-in:hover {
            text-decoration: underline;
        }

    .main-section {
        padding: 60px 20px;
        text-align: center;
    }

    .intro-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 50px;
        margin-bottom: 50px;
    }

        .intro-container img {
            width: 200px;
            height: auto;
            border-radius: 8px;
            box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.1);
        }

    .text-content {
        max-width: 600px;
        text-align: left;
        font-style: italic;
        line-height: 1.7em;
    }

        .text-content h2 {
            font-family: 'Playfair Display', serif;
            font-weight: 600;
            color: #1e2d38;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

    .call-to-action {
        font-style: italic;
        font-size: 1.3em;
        margin-bottom: 30px;
        color: #3d3d3d;
    }

    .form-container {
        background-color: #ffffff;
        padding: 40px;
        margin: 0 auto;
        max-width: 500px;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            font-weight: 500;
            margin-bottom: 5px;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .form-button {
        padding: 12px 28px;
        background-color: #3e9db3;
        border: none;
        border-radius: 6px;
        color: white;
        font-style: italic;
        font-size: 1em;
        box-shadow: 0px 6px 14px rgba(0, 0, 0, 0.15);
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

        .form-button:hover {
            background-color: #2c7d91;
        }

    .alert {
        margin-top: 10px;
        font-size: 0.95em;
        color: #2a3b47;
        font-style: italic;
    }

    .membership-note {
        margin-top: 30px;
        background-color: #f0fbfc;
        padding: 20px;
        border-radius: 8px;
        font-size: 0.95em;
        color: #2a3b47;
        font-style: italic;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        text-align: left;
    }

        .membership-note ul {
            padding-left: 20px;
            margin: 0;
            list-style-type: "🌿 ";
        }
</style>

<header>
    Healing Massage
</header>

<section class="main-section">
    <div class="intro-container">
        <img src="~/image/logomassage.png" asp-append-version="true" alt="Healing Massage Icon" class="massage-logo" />
        <div class="text-content">
            <h2>Book a Massage</h2>
            <p>
                Experience the healing power of touch. Select your preferred therapist, choose a convenient time, and enjoy a personalized massage session tailored to your needs.
            </p>
        </div>
        <div class="membership-note">
            <p><strong>✨ Perks of Being a Member</strong></p>
            <ul>
                <li>🎁 Redeem exclusive promo codes for instant discounts</li>
                <li>📅 View and manage all your bookings anytime</li>
            </ul>
            <p style="margin-top: 10px;">
                <a asp-controller="Auth" asp-action="Register" style="color: #3e9db3;">Create an account</a> or
                <a asp-controller="Auth" asp-action="Login" style="color: #3e9db3;">Sign in</a> to unlock all features!
            </p>
        </div>
    </div>

    <div class="call-to-action">
        Book your moment of peace today.
    </div>

    <div class="form-container">
        <form id="bookingForm">
            <input type="hidden" id="userId" value="@userId" />

            <div class="form-group">
                <label for="name">Your Name:</label>
                <input type="text" id="name" class="form-control" placeholder="Enter your name" required />
            </div>

            <div class="form-group">
                <label for="email">Your Email:</label>
                <input type="email" id="email" class="form-control" placeholder="Enter your email" required />
            </div>


            <div class="form-group">
                <label for="therapistId">Select Therapist:</label>
                <select id="therapistId" class="form-control">
                    @foreach (var therapist in Model)
                    {
                        <option value="@therapist.Id">@therapist.Name - @therapist.Specialty</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="appointmentTime">Appointment Time:</label>
                <input type="datetime-local" id="appointmentTime" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="promoCode">Promo Code:</label>
                <input type="text" id="promoCode" class="form-control" placeholder="Enter promo code" />
                <button type="button" id="applyPromoBtn" class="form-button" style="margin-top: 10px;">Apply Promo Code</button>
                <div id="promoResult" class="alert"></div>
            </div>

            <button type="button" id="bookNowBtn" class="form-button">Book Now</button>
            <div id="bookingResult" class="alert"></div>
        </form>
    </div>

</section>

@section Scripts {
    <script>
        document.getElementById("applyPromoBtn").addEventListener("click", function () {
            var promoCode = document.getElementById("promoCode").value.trim();
            if (!promoCode) {
                document.getElementById("promoResult").innerText = "⚠️ No promo code entered. You can still book without one.";
                return;
            }

            fetch("/api/promo/apply", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(promoCode)
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => { throw new Error(text); });
                }
                return response.json();
            })
            .then(data => {
                document.getElementById("promoResult").innerText = "🎉 Discount: " + data.discount + "% applied!";
            })
            .catch(error => {
                document.getElementById("promoResult").innerText = "Promo Error: " + error.message;
            });
        });

                document.getElementById("bookNowBtn").addEventListener("click", function () {
            const therapistId = document.getElementById("therapistId").value;
            const appointmentTime = document.getElementById("appointmentTime").value;
            const promoCode = document.getElementById("promoCode").value;
            const userId = document.getElementById("userId").value;
            const name = document.getElementById("name").value;
            const email = document.getElementById("email").value;

            if (!name || !therapistId || !appointmentTime) {
                alert("Please fill out all required fields.");
                return;
            }

            const booking = {
                name: name,
                email: email, // <-- pass this to the backend
                therapistId: parseInt(therapistId),
                appointmentTime: appointmentTime,
                promoCode: promoCode || "",
                userId: userId || null
            };

            // Store booking temporarily (can also use sessionStorage)
            localStorage.setItem("pendingBooking", JSON.stringify(booking));

            // Redirect to PayPal
            fetch("/Payment/Process", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ amount: 49.99 }) // Replace with dynamic amount later
            })
            .then(res => res.json())
            .then(data => {
                if (data.redirectUrl) {
                    window.location.href = data.redirectUrl;
                } else {
                    document.getElementById("bookingResult").innerText = "❌ Could not redirect to PayPal.";
                }
            })
            .catch(error => {
                document.getElementById("bookingResult").innerText = "❌ Payment setup failed: " + error.message;
            });
        });

    </script>
}

